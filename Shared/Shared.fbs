// 로그인 요청을 나타내는 테이블
table FCG_Login {
  name: string; // 사용자 이름
  pwd: string;  // 비밀번호
}

root_type FCG_Login;

// 로그인 응답을 나타내는 테이블
table FGC_Login {
  result: int; // 결과 코드 (예: 0 = 성공, 1 = 실패)
}

root_type FGC_Login;

